{
    "manifest_version": 2,
    "name": "FuzzyMark",
    "version": "1.0",

    "icons": {
        "16": "16x16.png",
        "32": "32x32.png",
        "48": "48x48.png",
        "128": "128x128.png"
    },

    "browser_action": {
        "default_title": "FuzzyIt",
        "default_icon": "48x48.png"
    },

    "permissions": [
        "bookmarks"
    ],

    "commands": {
        "show-matcher": {
            "suggested_key": {
                "default": "Ctrl+P"
            },
            "description": "Open matcher"
        }
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    }
 }
