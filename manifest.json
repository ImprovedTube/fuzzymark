{
    "manifest_version": 2,
    "name": "FuzzyMark",
    "version": "0.1",

    "icons": {
        "16": "static/img/16x16.png",
        "32": "static/img/32x32.png",
        "48": "static/img/48x48.png",
        "128": "static/img/128x128.png"
    },

    "browser_action": {
        "default_title": "FuzzyIt",
        "default_icon": "static/img/48x48.png"
    },

    "web_accessible_resources": [
        "static/templates/*.html"
    ],

    "permissions": [
        "storage",
        "bookmarks",
        "chrome://favicon/"
    ],

    "options_ui": {
        "page": "static/options.html",
        "chrome_style": true
    },

    "commands": {
        "show-matcher": {
            "suggested_key": {
                "default": "Ctrl+P"
            },
            "description": "Open matcher"
        }
    },
    "background": {
        "scripts": [
            "dist/background.bundle.js"
        ],
        "persistent": false
    }
 }
